<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">

	<application>
		<el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
	</application>
	<navigation-rule>
		<display-name>pages/*</display-name>
		<from-view-id>/pages/*</from-view-id>
		<navigation-case>
			<from-outcome>logoff</from-outcome>
			<to-view-id>/pages/login.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>pages/*</display-name>
		<from-view-id>/pages/*</from-view-id>
		<navigation-case>
			<from-outcome>cadastrarServidor</from-outcome>
			<to-view-id>/pages/cadastrarServidor.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>pages/*</display-name>
		<from-view-id>/pages/*</from-view-id>
		<navigation-case>
			<from-outcome>adicionarSetor</from-outcome>
			<to-view-id>/pages/manager/adicionarSetor.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>pages/*</display-name>
		<from-view-id>/pages/*</from-view-id>
		<navigation-case>
			<from-outcome>adicionarSolicitacao</from-outcome>
			<to-view-id>/pages/home/adicionarSolicitacao.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>pages/*</display-name>
		<from-view-id>/pages/*</from-view-id>
		<navigation-case>
			<from-outcome>main</from-outcome>
			<if>#{usuarioBean.usuario.nivelAcesso eq 2}</if>
			<to-view-id>/pages/manager/visualizarRelatorios.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>main</from-outcome>
			<if>#{usuarioBean.usuario.nivelAcesso eq 1}</if>
			<to-view-id>/pages/home/chefe/solicitacoesSetor.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>main</from-outcome>
			<if>#{usuarioBean.usuario.nivelAcesso eq 0}</if>
			<to-view-id>/pages/home/visualizarSolicitacoes.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>pages/*</display-name>
		<from-view-id>/pages/*</from-view-id>
		<navigation-case>
			<from-outcome>visualizarSolicitacoes</from-outcome>
			<to-view-id>/pages/home/visualizarSolicitacoes.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>pages/*</display-name>
		<from-view-id>/pages/*</from-view-id>
		<navigation-case>
			<from-outcome>adicionarTipoSolicitacao</from-outcome>
			<to-view-id>/pages/home/chefe/adicionarTipoSolicitacao.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>pages/*</display-name>
		<from-view-id>/pages/*</from-view-id>
		<navigation-case>
			<from-outcome>mudarSenha</from-outcome>
			<to-view-id>/pages/home/mudarSenha.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>pages/*</display-name>
		<from-view-id>/pages/*</from-view-id>
		<navigation-case>
			<from-outcome>solicitacoesSetor</from-outcome>
			<to-view-id>/pages/home/chefe/solicitacoesSetor.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>pages/*</display-name>
		<from-view-id>/pages/*</from-view-id>
		<navigation-case>
			<from-outcome>visualizarRelatorios</from-outcome>
			<to-view-id>/pages/manager/visualizarRelatorios.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
</faces-config>
